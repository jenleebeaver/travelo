<div class="container">
<header></header>
<main>
  <div class="main-header">
      <h1 class="h1-main"> Hey, <%= current_user.full_name %>!<br/></h1>
      <h2 class="h2-main">Here are all of your posts.</h2> 
  </div>

<div class="body">
<table>
  <thead>
    <tr>
      <th><%= %></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="post">
        <%= post.content %>
        <br>
        📍 <%= Location.find_by_id(post.location_id).location_name %>
        </td>
        <td>
          <%= link_to "✏️", edit_post_path(post) %> |
          <%= link_to "🗑", post, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<div>
    <a href='/posts/new'>Create New Post</a>
</div>

<div>
    <a href='/locations'>Check Out Other Posts In Your Area!</a>
</div>

</main>
</div>