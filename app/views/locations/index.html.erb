<div class="container">
<header></header>
<main>
  <div class="intro">
      <% if session[:user_id] %>
          <div>
          You are logged in as: <%= current_user.username %>
          </div>
      <%end%>

      <h1> Welcome, <%= current_user.full_name %>!<br/></h1>
      <h2>Here are all of the posts in  your location.</h2> 
  </div>


<br />

<table>
  <thead>
    <tr>
      <th><%= current_user.username %></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.posts %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
  <a href='/posts/new'>Create New Post</a>
</div>
<div>
  <a href='/posts'>Go back to all of your posts!</a>
</div>

</main>
</div>