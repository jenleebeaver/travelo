<div>
    <a href='/auth/facebook' class="btn-facebook"> SIGN UP WITH FACEBOOK</a>
</div>

<div>
    <a href='/auth/google' class="btn-facebook btn-google"> SIGN UP WITH GOOGLE</a>
</div>

<p> or </p>
<p> Sign up with your email address </p>
            
<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2>There were some errors:</h2>
  
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <p>
        <%= f.label :name, "What's your name?"%><br>
        <%= f.text_field :name, placeholder: "Enter your name.", class: "form-control"%>
      </p>
    </div>
    <div class="field">
      <p>
        <%= f.label :email, "What's your email?"%><br>
        <%= f.text_field :name, placeholder: "Enter your email.", class: "form-control"%>
      </p>
    </div>
    <div class="field">
      <p>
       <%= f.label :password, "Create a password"%><br>
       <%= f.password_field :password, placeholder: "Create a password.", class: "form-control"%>
      </p>
    </div>
    <div class="field">
      <p>
       <%= f.label :password_confirmation, "Confirm your password"%><br>
       <%= f.password_field :password_confirmation, placeholder: "Enter your password again.", class: "form-control"%>
      </p>
    </div>
    <div class="field">
      <p>
        <%= f.label :username, "What should we call you?"%><br/>
        <%= f.text_field :username, placeholder: "Enter a profile name.", class: "form-control"%>
      </p>
    </div>
    <div class="form-group">
      <p>
        <%= f.label :location, "Where will you be traveling?" %><br/>
        <%= f.text_field :location, placeholder: "Enter a location.", class: "form-control"%>
      </p>
    </div>
    <div class="actions">
      <%= f.submit "SIGN UP", class: "btn btn-primary" %>
    </div>
  <% end %>

<p> Have an account? <%= link_to "Login.", login_path %> </p>

