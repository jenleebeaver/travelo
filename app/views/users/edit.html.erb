<h2> Edit "<%=@user.name%>" </h2>

<%= form_tag user_path(@user), method: "patch" do%>
    <div class="field">
        <%= label_tag "name", "Name" %>
        <%=text_field_tag "name"%>
    </div>

    <div class="field">
        <%= label_tag "email", "Email" %>
        <p>Enter new email</p>
        <%=text_field_tag :email, @user.email%>
    </div>

    <div class="field">
        <%= label_tag "password", "Password" %>
        <p>Enter new password</p>
        <%=text_field_tag :password, @user.password%>
    </div>

    <div class="field">
        <%= label_tag "password_confirmation", "Password Confirmation" %>
        <p>Reenter password</p>
        <%=text_field_tag :password_confirmation, @user.password_confirmation%>
    </div>

    <div class="field">
        <%= label_tag "username", "Username" %>
        <p>Change your username</p>
        <%=text_field_tag :username, @user.username%>
    </div>

    <%= submit_tag "Update", update_path %>
    <% end %>

    <%= link_to "Delete", user, method: :delete, data: 
    {confirm: "Are you sure you want to delete your profile?"}%>