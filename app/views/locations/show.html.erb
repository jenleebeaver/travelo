<div class="container">
<header></header>
<main>
  <div class="intro">
      <% if session[:user_id] %>
          <div>
          You are logged in as: <%= current_user.username %>
          </div>
      <%end%>

      <h1> Welcome, <%= current_user.full_name %>!<br/></h1>
      <h2>Here are all of the posts associated with your location.</h2> 
  </div>

  <div><%= link_to 'Create Post', new_post_path %></div>
<br />

<table>
  <thead>
    <tr>
      <th><%= current_user.username %></th>
    </tr>
  </thead>

<%# this code is showing all of the posts  %>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.location_id.content %></td>
         <td>
              <%= link_to 'Comment' %>
            </td>
      </tr>
    <% end %>
  </tbody>
</table>

</main>
</div>