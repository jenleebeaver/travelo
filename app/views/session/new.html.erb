<!DOCTYPE html>
<html>
    <head></head>
    <body>
       
        <script>
            window.fbAsyncInit = function() {
            FB.init({
            appId      : '300438264535610',
            cookie     : true,
            xfbml      : true,
            version    : '8.0'
            });

            FB.AppEvents.logPageView();   
            };

            (function(d, s, id){
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) {return;}
            js = d.createElement(s); js.id = id;
            js.src = "https://connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));
        </script>

        <div class="h1-2">
            TRAVELO
            <hr>
        </div>

        <div>
            <p>To continue, log into travelo.</p>
        </div>

        <fb:login-button 
            scope="public_profile,email"
            onlogin="checkLoginState();">
        </fb:login-button>

        <div>
            <a href='/auth/facebook' class="btn-facebook"> CONTINUE WITH FACEBOOK</a>
        </div>

        <div>
            <a href='/auth/google' class="btn-facebook btn-google"> CONTINUE WITH GOOGLE</a>
        </div>

        <p> or </p>

       

        <div class="form">
            <%= form_for @user, :url => { :action => :new } do |f|%>
                <div class="form-group">
                    <p>
                        <%= f.label :email%>
                        <br/>
                        <%= f.text_field :email, placeholder: "Enter your email." %>
                    </p>
                </div>

                <% if flash[:notice] %>
                    <div class="notice">
                        <h2><%= flash[:notice]%></h2>
                    </div>
                <%end%>

                <div class="form-group">
                    <p>
                        <%= f.label :password%>
                        <br/>
                        <%= f.password_field :password, placeholder: "Password." %>
                    </p>
                </div>

                <div class="btn btn-primary">
                    <%= submit_tag "Login" %>
                </div>
            <%end%>
         </div> 

        <p> Don't have an account? </p>

        <div class="login">
            <a class="btn btn-anchor" href="/signup"> SIGN UP FOR TRAVELO</a> 
           </div>

    </body>
</html>