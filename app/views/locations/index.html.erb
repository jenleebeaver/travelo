<div class="container">
<header></header>
<main>
  <div class="intro">
      <% if session[:user_id] %>
          <div>
          You are logged in as: <%= current_user.username %>
          </div>
      <%end%>

      <h1> Welcome, <%= current_user.full_name %>!<br/></h1>
      <h2>Here are all of the posts associated with your location.</h2> 
  </div>

  <div>
    <a href='/posts'>Create New Post</a>
</div>
<br />

<table>
  <thead>
    <tr>
      <th><%= current_user.username %></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.posts.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</main>
</div>