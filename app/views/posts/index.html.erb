<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<div class="container">
<header></header>
<main>
  <div class="main-header">
      <h1 class="h1-main">  
      <div id="greeting"> Hello </div> <%= current_user.full_name %>
      <script type = "text/javascript" >
            var greeting = document.getElementById("greeting");
            var currentPos = 0;
            var greetings = ["Hello", "Hola", "你好", "여보세요", "مرحبا", "Здравствуйте", "สวัสดี", "Hallo", "Bonjour"]

            function loopGreeting() {
              var currentGreeting = greetings[currentPos%greetings.length]
              greeting.innerHTML = currentGreeting
              currentPos++  
            }

            setInterval(loopGreeting, 1500);
        </script> 
      <div id="emoji"> 👋 </div>
        <script type = "text/javascript" >
            var emoji = document.getElementById("emoji");
            var currentPos = 0;
            var emojis = ["👋", "👋🏾", "👋🏿", "👋🏿", "👋🏻", "👋🏼", "👋🏽"]

            function loopEmojis(){
              var currentEmoji = emojis[currentPos%emojis.length]
              emoji.innerHTML = currentEmoji
              currentPos++  
            }

            setInterval(loopEmojis, 1500);
        </script>
      </h1>
      <h2 class="h2-main">Here are all of your posts.</h2> 
  </div>

<div class="body">
<table>
  <thead>
    <tr>
      <th><%= %></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="post">
          <div class="content">
            <%= post.content %>
          </div>
        </td>
        <td>
        📍 <%= Location.find_by_id(post.location_id).location_name %>
        <br>
        <%= link_to "✏️", edit_post_path(post) %> |
          <%= link_to "🗑", post, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="btn-post">
    <a href='/posts/new'>CREATE NEW POST</a>
</div>

</div>

<div class="actions btn btn2" id="posts">
    <a href='/locations'>Check Out Posts In Your Area!</a>
</div>

</main>
</div>